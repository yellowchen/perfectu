{
	"security.workspace.trust.untrustedFiles": "open",
	"editor.minimap.enabled": false,
	"workbench.editor.enablePreview": false,
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	"CSSNavigation.enableClassNameDefinitionDiagnostic": false,

	//【Prettier】
	// 使用Prettier排版
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	// 控制編輯器是否應自動設定貼上的內容格式。格式器必須可供使用，而且格式器應該能夠設定文件中一個範圍的格式。
	"editor.formatOnPaste": true,
	// 在儲存時設定檔案格式。格式器必須處於可用狀態、檔案不得自動儲存，且編輯器不得關機。
	"editor.formatOnSave": false,
	"editor.detectIndentation": false,
	"editor.hover.enabled": "off",
	"editor.wordWrap": "on",
	"editor.guides.bracketPairs": true,
	// 針對特定文件，設定Prettier為格式化程序的優先工具
	"[html,javascript, scss, json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// 切換視窗自動儲存
	"files.autoSave": "onFocusChange",
	"files.defaultLanguage": "html",
	// 儲存檔案時，自動修正空格
	"files.trimTrailingWhitespace": true,

	// 在jsx使用單引號而不是雙引號
	"prettier.jsxSingleQuote": true,
	// 設定代碼最佳長度，超過則執行換行
	"prettier.printWidth": 120,
	// 縮排空兩格
	"prettier.tabWidth": 4,
	// 句尾加分號
	"prettier.semi": true,
	// 字與括號保有空格
	"prettier.bracketSpacing": true,
	"prettier.singleAttributePerLine": true,
	"prettier.useTabs": true,

	"[json]": {
		"editor.quickSuggestions": {
			"strings": true
		}
	},
	"json.schemas": [],

	"terminal.explorerKind": "external",
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	// emmet tab 自動展開
	"emmet.triggerExpansionOnTab": true,
	// template 展開(快速使用HTML標籤)
	"emmet.includeLanguages": {
		"javascript": "javascriptreact",
		"vue-html": "html",
		"plaintext": "jade",
		"ejs": "html"
	},
	// 型別檢查
	"js/ts.implicitProjectConfig.checkJs": true,
	"javascript.validate.enable": false,
	"window.zoomLevel": 1.5,
	"git.path": "C:/Program Files/Git/cmd/git.exe",
	"html.format.wrapAttributes": "force-expand-multiline",

	"workbench.colorTheme": "Default High Contrast",
	"javascript.updateImportsOnFileMove.enabled": "always",
	// 讓函式(名)和後面的括號間，產生空格
	"javascript.format.insertSpaceBeforeFunctionParenthesis": true
}
